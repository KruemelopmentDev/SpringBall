<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <org.kruemelopment.springball.MyToastView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toasttext"
        android:layout_alignBottom="@id/toasttext"
        android:layout_alignStart="@id/toasttext"
        android:layout_alignEnd="@id/toasttext"
        android:id="@+id/mytoastview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:id="@+id/toasttext"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

</RelativeLayout>